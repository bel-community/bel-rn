{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/native/*": ["src/native/*"],
      "@/screens/*": ["src/screens/*"],
      "@/components/*": ["src/components/*"]
    }
  },
  "include": ["src", "index.js"],
  "exclude": ["node_modules"]
}
